{
  "name": "playwright-cucumber-framework",
  "version": "1.0.0",
  "scripts": {
    "test": "cucumber-js tests/features --require-module ts-node/register --require-module tsconfig-paths/register --require tests/steps/**/*.ts --require tests/support/**/*.ts --format json:reports/cucumber.json",
    "test:headed": "PLAYWRIGHT_HEADLESS=false npm run test"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@playwright/test": "^1.44.0",
    "dotenv": "^16.3.1",
    "playwright": "^1.55.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@utils": "tests/utils/",
    "@support": "tests/support/",
    "@steps": "tests/steps/"
  }
}
