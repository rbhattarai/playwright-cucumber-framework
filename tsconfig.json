{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["tests/utils/*"],
      "@steps/*": ["tests/steps/*"],
      "@support/*": ["tests/support/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["tests/**/*.ts", ".cucumber.mjs", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
